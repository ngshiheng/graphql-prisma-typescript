type User {
    id: ID! @id
    name: String
    email: String! @unique
    password: String!
    role: UserRole @default(value: USER)
    posts: [Post!]! @relation(name: "PostsByUser", onDelete: CASCADE)
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

enum UserRole {
    ADMIN
    USER
}
