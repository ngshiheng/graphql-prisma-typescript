{
    "name": "graphql-prisma-typescript",
    "version": "1.0.0",
    "description": "A GraphQL, Prisma, TypeScript server boilerplate",
    "main": "index.ts",
    "author": "Jerry Ng <ngshiheng@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "start": "nodemon -e ts,graphql -x ts-node -r tsconfig-paths/register src/index.ts",
        "eslint": "eslint . --ext ts,gql --ignore-path .eslintignore",
        "eslint:fix:": "eslint --fix . --ext ts,gql --ignore-path .eslintignore",
        "prettier": "prettier \"./**/*.{ts,yml,yaml}\" -l --ignore-path .eslintignore",
        "prettier:fix": "prettier \"./**/*.{ts,yml,yaml}\" --write --ignore-path .eslintignore"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "graphql": "^14.6.0",
        "graphql-yoga": "^1.18.3",
        "jsonwebtoken": "^8.5.1",
        "path": "^0.12.7",
        "prisma-client-lib": "^1.34.10",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^0.17.6"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/graphql": "^14.5.0",
        "@types/jsonwebtoken": "^8.3.8",
        "@typescript-eslint/eslint-plugin": "^2.21.0",
        "@typescript-eslint/parser": "^2.21.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-plugin-graphql": "^3.1.1",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.8.3"
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": true
    }
}
